extends ../layout

block content
    script( defer src="/javascripts/promo-codes.js" )

    form(data-promo-code-id=promoCode.promoCodeID).col-md-12
        .form-group
            label(for='newPromoCodeInput') Промо-код
            input#newPromoCodeInput.form-control(placeholder='Введите промо-код')
        .form-group
            label(for='newPercentageInput') Процент скидки
            input#newPercentageInput.form-control(placeholder='Введите процент скидки')
        .form-group
            label(for='newDeliveryInput') Доставка
            input#newDeliveryInput.form-control(placeholder='Введите доставку')
        .form-group
            label(for='newPromoCountInput') Количество
            input#newPromoCountInput.form-control(placeholder='Введите кол-во промо-кодов')
        .form-group
            label(for='newStartDateInput') Начальная дата активности промо-кода
            input#newStartDateInput.form-control(type="date")
        .form-group
            label(for='newExpireDateInput') Конечная дата активности промо-кода
            input#newExpireDateInput.form-control(type="date")
        .form-group
            #message.alert.alert-danger(style="display: none")
            #updatePromoCodeButton.btn.btn-primary Обновить промо-код